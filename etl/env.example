# Copy to .env and update credentials
export PGURL="postgresql://username:password@localhost:5432/defi_warehouse"

# Common run settings
export REORG_WINDOW=200         # blocks to reprocess at the chain tail
export DEFAULT_FROM_BLOCK=0     # for initial backfill
export DEFAULT_TO_BLOCK=9223372036854775807  # or set per run

# Chains
export ARBITRUM_CHAIN_ID=42161  # Arbitrum One (EVM) 
export FLARE_CHAIN_ID=14        # Flare Mainnet (EVM)

# (Optional) path to psql, else relies on PATH
export PSQL_BIN="psql"