# Database Configuration for wallet2cointracking
# Copy to .env and update with your actual credentials

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/defi_warehouse
PGURL=postgresql://username:password@localhost:5432/defi_warehouse

# Alternative: Individual components
DB_HOST=localhost
DB_PORT=5432
DB_NAME=defi_warehouse
DB_USER=postgres
DB_PASSWORD=your_password_here

# ETL Configuration (from existing etl/env.example)
REORG_WINDOW=200
DEFAULT_FROM_BLOCK=0
DEFAULT_TO_BLOCK=9223372036854775807

# Chain Configuration
ARBITRUM_CHAIN_ID=42161
FLARE_CHAIN_ID=14

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SQL_DEBUG=false

# API Keys (if needed for enhanced features)
ETHERSCAN_API_KEY=your_etherscan_api_key
COINGECKO_API_KEY=your_coingecko_api_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/database.log